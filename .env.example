# API Key for DeepSeek LLM - Replace with your own key
DEEPSEEK_API_KEY=your_api_key_here

# Optional alternative API configurations
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Configuration options
# MAX_TOKENS_PER_CHUNK=4000
# MODEL_NAME=deepseek-chat

# Authentication settings
JWT_SECRET=change_this_to_a_random_secure_string
JWT_ACCESS_TOKEN_EXPIRE_SECONDS=3600
JWT_REFRESH_TOKEN_EXPIRE_SECONDS=2592000

# Database configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=wisdom_db
DB_POOL_SIZE=10

# Redis configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# API Gateway configuration
GATEWAY_URL=http://localhost:8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000 